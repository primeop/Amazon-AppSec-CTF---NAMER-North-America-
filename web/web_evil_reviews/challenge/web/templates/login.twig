{% extends "base.twig" %}

{% block title %}Login - Evil Core Employee Portal{% endblock %}

{% block content %}
<div class="mt-10 max-w-md mx-auto bg-white p-8 rounded-md shadow-md">
    <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-primary">Evil Core</h1>
        <h2 class="text-xl text-secondary mt-2">Employee Portal</h2>
        <p class="text-sm text-gray-600 mt-2">Login with your employee credentials</p>
    </div>

    {% if error %}
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <p>{{ error }}</p>
    </div>
    {% endif %}

    <form method="POST" action="/">
        <div class="mb-4">
            <label for="employee_id" class="block text-gray-700 font-bold mb-2">Employee ID</label>
            <input type="text" id="employee_id" name="employee_id" 
                   class="input-field w-full" 
                   placeholder="Enter your employee ID"
                   value="{{ employee_id|default('') }}" 
                   required>
        </div>
        
        <div class="mb-6">
            <label for="password" class="block text-gray-700 font-bold mb-2">Password</label>
            <input type="password" id="password" name="password" 
                   class="input-field w-full" 
                   placeholder="Enter your password" 
                   required>
        </div>
        
        <button type="submit" class="btn-primary w-full">
            Sign In
        </button>
    </form>

    <div class="mt-6 text-center text-sm text-gray-600">
        <p>Trouble logging in? Contact IT Support at <span class="text-accent">support@evilcore.corp</span></p>
    </div>
</div>

<div class="mt-12 text-center max-w-2xl mx-auto">
    <h3 class="text-lg font-bold text-gray-700 mb-4">eCoin Global Network Status</h3>
    <div class="bg-white p-4 rounded-md shadow-md">
        <div class="flex justify-between text-sm">
            <span class="text-gray-600">Network Nodes:</span>
            <span class="text-primary font-bold">14,876 Active</span>
        </div>
        <div class="flex justify-between text-sm mt-2">
            <span class="text-gray-600">Current Block:</span>
            <span class="text-primary font-bold">#7,829,451</span>
        </div>
        <div class="flex justify-between text-sm mt-2">
            <span class="text-gray-600">Global Debt Ledger:</span>
            <span class="text-accent font-bold">SECURE</span>
        </div>
    </div>
</div>
{% endblock %} 