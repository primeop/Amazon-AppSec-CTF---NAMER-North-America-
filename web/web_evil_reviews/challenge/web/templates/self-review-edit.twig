{% extends "base.twig" %}

{% block title %}Edit Self Review - Evil Core Employee Portal{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto">
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-primary">Edit Your Self Review</h1>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6">
        <form method="POST" action="/self-review/update">
            <div class="mb-4">
                <label for="rating" class="block text-gray-700 font-bold mb-2">Rate Yourself (1-5)</label>
                <select id="rating" name="rating" class="input-field w-full" required>
                    <option value="1" {% if selfReview and selfReview.rating == 1 %}selected{% endif %}>1 - Needs significant improvement</option>
                    <option value="2" {% if selfReview and selfReview.rating == 2 %}selected{% endif %}>2 - Below expectations</option>
                    <option value="3" {% if not selfReview or selfReview.rating == 3 %}selected{% endif %}>3 - Meets expectations</option>
                    <option value="4" {% if selfReview and selfReview.rating == 4 %}selected{% endif %}>4 - Exceeds expectations</option>
                    <option value="5" {% if selfReview and selfReview.rating == 5 %}selected{% endif %}>5 - Outstanding performance</option>
                </select>
            </div>
            
            <div class="mb-4">
                <label for="content" class="block text-gray-700 font-bold mb-2">Your Self Assessment</label>
                <textarea id="content" name="content" rows="10" 
                          class="input-field w-full" 
                          placeholder="Write your self assessment here..."
                          required>{{ selfReview ? selfReview.content : '' }}</textarea>
                <p class="text-gray-600 text-sm mt-1">Be honest about your strengths and areas for improvement.</p>
            </div>
            
            <div class="flex justify-between">
                <a href="/self-review" class="btn-secondary">Cancel</a>
                <button type="submit" class="btn-primary">
                    Save Self Review
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %} 