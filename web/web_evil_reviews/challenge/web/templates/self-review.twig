{% extends "base.twig" %}

{% block title %}Self Review - Evil Core Employee Portal{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto">
    <div class="mb-6 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-primary">Your Self Review</h1>
        {% if selfReview %}
            <a href="/self-review/edit" class="btn-secondary">Edit Self Review</a>
        {% endif %}
    </div>
    
    {% if selfReview %}
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <div class="flex justify-between items-start mb-6">
                <div>
                    <h2 class="font-bold text-xl text-secondary">Self Assessment</h2>
                    <p class="text-gray-600">{{ selfReview.reviewDate }}</p>
                </div>
                
                <div class="bg-{{ selfReview.rating >= 4 ? 'green' : (selfReview.rating >= 3 ? 'yellow' : 'red') }}-100 px-3 py-1 rounded-full text-{{ selfReview.rating >= 4 ? 'green' : (selfReview.rating >= 3 ? 'yellow' : 'red') }}-800 font-bold">
                    Self Rating: {{ selfReview.rating }}/5
                </div>
            </div>
            
            <div class="mt-4">
                {% if selfReview.id %}
                    <div class="text-center">
                        <p class="mb-2 text-gray-600">Your self-assessment word cloud:</p>
                        <img src="/api/processor/word-cloud.png?review={{ selfReview.id }}" 
                             alt="Self-assessment word cloud" 
                             class="mx-auto max-w-full rounded-lg border border-gray-200"
                             style="max-height: 400px;">
                    </div>
                {% else %}
                    <p class="text-gray-700">{{ selfReview.content|nl2br }}</p>
                {% endif %}
            </div>
        </div>
    {% else %}
        <div class="bg-blue-50 p-6 rounded-lg mb-8 text-center">
            <p class="text-blue-800 mb-4">You haven't created a self-review yet.</p>
            <a href="/self-review/edit" class="btn-primary inline-block">Create Self Review</a>
        </div>
    {% endif %}
    
    {% if showForm and not selfReview %}
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="font-bold text-xl text-secondary mb-4">Create Your Self Review</h2>
            
            <form method="POST" action="/self-review/update">
                <div class="mb-4">
                    <label for="rating" class="block text-gray-700 font-bold mb-2">Rate Yourself (1-5)</label>
                    <select id="rating" name="rating" class="input-field w-full" required>
                        <option value="1">1 - Needs significant improvement</option>
                        <option value="2">2 - Below expectations</option>
                        <option value="3" selected>3 - Meets expectations</option>
                        <option value="4">4 - Exceeds expectations</option>
                        <option value="5">5 - Outstanding performance</option>
                    </select>
                </div>
                
                <div class="mb-4">
                    <label for="content" class="block text-gray-700 font-bold mb-2">Your Self Assessment</label>
                    <textarea id="content" name="content" rows="10" 
                              class="input-field w-full" 
                              placeholder="Write your self assessment here..."
                              required></textarea>
                    <p class="text-gray-600 text-sm mt-1">Be honest about your strengths and areas for improvement.</p>
                </div>
                
                <button type="submit" class="btn-primary">
                    Submit Self Review
                </button>
            </form>
        </div>
    {% endif %}
</div>
{% endblock %} 